<div class="p-3 mb-2 bg-light text-dark">
  <h1>
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>

  <p><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>

  <br/>

  <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-warning" %> 
  <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <%= link_to 'Back', friends_path, class: "btn btn-secondary" %>
</div>