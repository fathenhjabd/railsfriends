<h1>Posts</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class = "table-dark">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User ID</th>
    </tr>
  </thead>

  <tbody>
    <%= form_for "", url: posts_path, role: "search", method: :get do %>
      <%= text_field_tag :search, @search_term,placeholder: "Search by title" %>
      <br/>
    <% end %>
    <br/>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.content %></td>
        <td><%= post.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<%= will_paginate @posts, class: 'pagination page-item page-link' %>
<br/>

<%= link_to 'New Post', new_post_path, class: 'btn btn-success' %>

